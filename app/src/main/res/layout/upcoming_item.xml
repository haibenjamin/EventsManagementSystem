<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/event_type_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/task_icon"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/upcoming_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/event_type_icon"
            android:layout_alignParentEnd="true"
            android:maxLines="2"
            android:minLines="2"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:ellipsize="end"/>

        <LinearLayout
            android:id="@+id/layout_linear_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/upcoming_name_txt"
            android:layout_toEndOf="@id/event_type_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/location"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/upcoming_location_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Location"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_linear_budget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_linear_location"
            android:layout_toEndOf="@id/event_type_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/gmail"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/upcoming_mail_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="mail"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_linear_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_linear_budget"
            android:layout_toEndOf="@id/event_type_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/date"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/upcoming_date_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Date"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_linear_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_linear_date"
            android:layout_toEndOf="@id/event_type_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/event"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/upcoming_type_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Type"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_linear_guests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_linear_type"
            android:layout_toEndOf="@id/event_type_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

        </LinearLayout>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/upcoming_delete_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/delete_icon"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
