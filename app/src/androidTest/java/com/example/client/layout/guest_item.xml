<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/guest_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/user"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/guest_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/guest_icon"
            android:layout_alignParentEnd="true"
            android:maxLines="2"
            android:minLines="2"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:ellipsize="end"/>

        <LinearLayout
            android:id="@+id/guest_guests_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/guest_name_txt"
            android:layout_toEndOf="@id/guest_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/group"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/guest_guests_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="guests"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guest_group_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/guest_guests_layout"
            android:layout_toEndOf="@id/guest_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/partners"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/guest_group_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="group"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guest_phone_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/guest_group_layout"
            android:layout_toEndOf="@id/guest_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone_icon"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/guest_phone_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="phone"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guest_status_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/guest_phone_layout"
            android:layout_toEndOf="@id/guest_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/status"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/guest_status_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="status"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guest_comments_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/guest_status_layout"
            android:layout_toEndOf="@id/guest_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/comments"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/guest_comments_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="comments"
                android:textSize="16sp"/>
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/guest_coming_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/delete_icon"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
